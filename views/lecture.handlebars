<body>
	<a class="backarrow" style="text-align:left;" href="/classes/{{classid}}">
		<i class="fas fa-arrow-left fa-lg" style="padding:10px"></i>
	</a>
	
	<div class="example" id="example">
		<h2 style="text-align: left;">{{course}}</h2>

		<!--video embed -->
		<div id="player"></div>


		
		<div class="buttons" style="margin-top: 10px;">
			<button onclick="getCurTime()" type="button">Mark Time</button> <button>Question</button>
		</div>

		<div class="titles">
			<h3 style="line-height: 25px;">{{title}}</h3>
			<p style="margin-bottom: 20px; line-height:25px;">{{summary}}</p>
			<!-- fill in section with time stamps -->
			<!-- so like, when button is clicked then timestamp show up on this section -->
		

		<hr>
			<h3>Timestamp Notes</h3>
		<hr>
		<div class="timestamps" id="ts" name="time">
				<!--this should fill with timestamps-->
				<p></p>
		</div>


			<!-- static stuff -->
		<hr>
			<h3>Transcript</h3>
			<hr>
			<div class="container" style="height: 300px;">
				<div class="container" style="line-height: 20px;">{{transcript}}</p>
			</div>
		</div>


	</div>

